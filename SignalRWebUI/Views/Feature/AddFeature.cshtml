@model AddFeature
@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Öne Çıkan Ekleme Sayfası</div>
			</div>

			<div class="card-body">

				<div class="form-group">
					<label for="text">Başlık</label>
					<input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
				</div>

				<div class="form-group">
					<label for="text">Açıklama</label>
					<input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">
				</div>

			</div>
			<div class="card-action">
				<button class="btn btn-success" type="submit">Ekle</button>
				<a class="btn btn-danger" href="/Feature/FeatureList">Geri</a>
			</div>
		</div>
	</div>
</form>

