
@model List<FeatureList>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Öne Çıkanlar Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Başlık</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.FeatureID</td>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/Feature/AddFeature" class="btn btn-outline-warning">Öne Çıkan Ekleme</a>
		</div>
	</div>
</div>