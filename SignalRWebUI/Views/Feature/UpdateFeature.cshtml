@model UpdateFeature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Öne Çıkanlar Güncelleme Sayfası</div>
			</div>

			<div class="card-body">
				<input type="hidden" class="form-control" asp-for="FeatureID" placeholder="@Model.FeatureID">
				<div class="form-group">
					<label for="text">Başlık</label>
					<input type="text" class="form-control" asp-for="Title" placeholder="@Model.Title">
				</div>
				<div class="form-group">
					<label for="text">Açıklama</label>
					<input type="text" class="form-control" asp-for="Description" placeholder="@Model.Description">
				</div>
				
			</div>
			<div class="card-action">
				<button class="btn btn-success" type="submit">Güncelle</button>
				<a class="btn btn-danger" href="/Feature/FeatureList">Geri</a>
			</div>
		</div>
	</div>
</form>
