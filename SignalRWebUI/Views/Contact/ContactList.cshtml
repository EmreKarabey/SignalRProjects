
@model List<ContactList>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">İletişim Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Yer</th>
						<th scope="col">Mail</th>
						<th scope="col">Telefon</th>
						<th scope="col">Footer Açıklama</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.ContactID</td>
							<td>@item.Location</td>
							<td>@item.Mail</td>
							<td>@item.Phone</td>
							<td>@item.FooterDescription</td>
							<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/Contact/AddContact" class="btn btn-outline-warning">İletişim Ekle</a>
		</div>
	</div>
</div>


