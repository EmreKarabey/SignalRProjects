

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_WebUILayout.cshtml";
}

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

	<style>
		.widget {
			width: 100%; /* Genişliği kapsayıcıya göre ayarla */
			height: 100px;
			display: flex;
			align-items: center;
			border-radius: 10px;
			color: white;
			font-family: Arial, sans-serif;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
			margin-bottom: 20px; /* Alt boşluk */
		}

		/* Dolu Masa Stili (Kırmızı) */
		.widget-full {
			background-color: #ff113a;
		}

			.widget-full .widget-icon i {
				color: #ff113a;
			}

		/* Boş Masa Stili (Yeşil) */
		.widget-empty {
			background-color: #2ecc71;
		}

			.widget-empty .widget-icon i {
				color: #2ecc71;
			}

		.widget-icon {
			width: 40px;
			height: 40px;
			background-color: white;
			border-radius: 50%;
			display: flex;
			justify-content: center;
			align-items: center;
			margin-left: 10px;
			flex-shrink: 0; /* İkonun sıkışmasını önle */
		}

			.widget-icon i {
				font-size: 24px;
			}

		.widget-text {
			margin-left: 20px;
		}

			.widget-text h3 {
				margin: 0;
				font-size: 18px;
				font-weight: bold;
				color: white;
			}

			.widget-text p {
				margin: 0;
				font-size: 14px;
				color: #f0f0f0;
			}
	</style>
</head>

<body class="sub_page">

	<div class="hero_area">
		<div class="bg-box">
			<img src="~/feane-1.0.0/images/hero-bg.jpg" alt="">
		</div>
		<header class="header_section">
			<div class="container">
				<nav class="navbar navbar-expand-lg custom_nav-container ">
					<a class="navbar-brand" href="/HomePage/Index">
						<span>
							Ready Sipariş
						</span>
					</a>

					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class=""> </span>
					</button>

					@await Component.InvokeAsync("_HomePageNavbarComponent")
				</nav>
			</div>
		</header>
	</div>

	<br>

	<div class="container">
		<div id="menutablelist" class="row">
		</div>
	</div>

</body>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script type="text/javascript">
	$(document).ready(() => {
		// 1. Bağlantıyı tanımla
		var connection = new signalR.HubConnectionBuilder()
			.withUrl("https://localhost:7042/SignalRHub")
			.withAutomaticReconnect() // Bağlantı koparsa kendi kendine tekrar denesin
			.build();

		// Bağlantı durumunu başta yaz
		$("#connstatus").text(connection.state);

		// 2. Veri Geldiğinde Ekrana Yaz (Dinleyiciler)
		connection.on("MenuTablesList0", (values) => {
			$("#menutablelist").empty();
			let htmltable =``;
						$.each(values,(index,item)=>{

							let statusClass = item.status ? "widget-empty" : "widget-full";

								let statusText = item.status ? "Boş" : "Dolu";

								htmltable += `<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
					<div class="widget ${statusClass}">
						<div class="widget-icon">`;

						if(item.status==true){
							htmltable+=`<a class="fas fa-chair"  href="/Menu/Index/${item.menuTableID}"></a>`;
						} else{
								htmltable+=`<i class="fas fa-chair"></i>`;
						}
							

							htmltable+=`	</div>
						<div class="widget-text">
						<h3>${item.name}</h3>
						<p>${statusText}</p>
						</div>
					</div>
				</div>`;


						});

	$("#menutablelist").html(htmltable);




		});


		// 3. Bağlantıyı Başlat
		connection.start().then(() => {
			$("#connstatus").text("Bağlandı");
			$("#connstatus").css("color", "green");
		}).catch((err) => {
			console.error(err);
			$("#connstatus").text("Bağlantı Hatası");
		});

		// 4. GÜVENLİ ZAMANLAYICI (Hata verdirmeyen kısım burası)
		setInterval(() => {
			// SADECE ve SADECE bağlantı varsa istek at
			if (connection.state === "Connected") {
				connection.invoke("MenuTablesList").catch(err => console.error(err));
			}
			// Bağlantı yoksa hiçbir şey yapma (Böylece hata sayısı artmaz)
		}, 1000);

	});
</script>