@model List< DiscountList>
@{
	ViewData["Title"] = "DiscountList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">İndirim Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Başlık</th>
						<th scope="col">İndirim Oranı</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.DiscountID</td>
							<td>@item.Title</td>
							<td>@item.Amount</td>
							<td>@item.Description</td>
							<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/Discount/AddDiscount" class="btn btn-outline-warning">İndirim Ekle</a>
		</div>
	</div>
</div>


