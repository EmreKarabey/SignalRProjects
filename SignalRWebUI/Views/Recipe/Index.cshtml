@model IEnumerable<RecipeList.Result>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_WebUILayout.cshtml";
}

<body class="sub_page">

	<div class="hero_area">
		<div class="bg-box">
			<img src="~/feane-1.0.0/images/hero-bg.jpg" alt="">
		</div>
		<!-- header section strats -->
		<header class="header_section">
			<div class="container">
				<nav class="navbar navbar-expand-lg custom_nav-container ">
					<a class="navbar-brand" href="index.html">
						<span>
							Feane
						</span>
					</a>

					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class=""> </span>
					</button>

					@await Component.InvokeAsync("_HomePageNavbarComponent")
				</nav>
			</div>
		</header>
		<!-- end header section -->
	</div>

	<br>

	<div class="container-fluid">
		<div class="row px-xl-5">
			<div class="col-lg-12 table-responsive mb-12">
				<h1>Rapid Api Yemek Tarifleri</h1>
				<br />
				<table class="table table-light table-borderless table-hover text-center mb-0">
					<thead class="thead-dark">
						<tr>
							<th>#</th>
							<th>Yemek Adı</th>
							<th>Ülke</th>
							<th>Fiyat</th>
							<th>Video</th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{


						<tbody class="align-middle">
							<tr>
								<td class="align-middle"><img src="@item.thumbnail_url" width="50px" height="50px" alt=""></td>
								<td class="align-middle">@item.name</td>
								<td class="align-middle">@item.country</td>
								<td class="align-middle">@item.price.consumption_portion ₺</td>
								<td class="align-middle"><a href="@item.original_video_url" class="btn btn-warning">Videosunu izle</a></td>
							</tr>
						</tbody>
					}

				</table>
			</div>
		</div>

	</div>


</body>

