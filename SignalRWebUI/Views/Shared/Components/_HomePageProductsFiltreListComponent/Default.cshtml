@model List<ProductsListDto>

<div class="row grid align-items-stretch">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-lg-4 all @item.Category.CategoryName.ToLower()">
            <div class="box h-100 d-flex flex-column" style="background-color: #222831; /* Siyah arka planı buraya sabitledim */ color: #fff;">

                <div class="d-flex flex-column flex-grow-1">
                    <div class="img-box">
                        <img src="@item.ImageURL" alt="@item.ProductsName">
                    </div>

                    <div class="detail-box d-flex flex-column flex-grow-1 justify-content-between p-3">
                        <div>
                            <h5>@item.ProductsName</h5>
                            <p>@item.Description</p>
                        </div>

                        <div class="options mt-3" style="display: flex; justify-content: space-between; align-items: center;">
                            <h6 class="mb-0">@item.Price ₺</h6>

                            <form method="post" asp-controller="Basket" asp-action="AddBasket" asp-route-id="@item.ProductsID" style="display:flex; align-items:center;">
                                <input type="hidden" value="@ViewBag.VID" name="menutable" />
                                <input type="number" name="quantity" value="1" min="1" max="10"
                                       style="width: 50px; margin-right: 10px; padding: 5px; border: 1px solid #ccc; border-radius: 5px; text-align: center; color: black;" />

                                <button type="submit" style="border:none; background:transparent; cursor:pointer; padding:0;">
                                    <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 456.029 456.029" style="enable-background:new 0 0 456.029 456.029; width:35px; height:35px; fill:white; background-color:#ffbe33; border-radius:100%; padding:8px;" xml:space="preserve">
                                    <g>
                                    <path d="M345.6,338.862c-29.184,0-53.248,23.552-53.248,53.248c0,29.184,23.552,53.248,53.248,53.248c29.184,0,53.248-23.552,53.248-53.248C398.336,362.926,374.784,338.862,345.6,338.862z" />
                                    <path d="M439.296,84.91c-1.024,0-2.56-0.512-4.096-0.512H112.64l-5.12-34.304C104.448,27.566,84.992,10.67,61.952,10.67H20.48C9.216,10.67,0,19.886,0,31.15c0,11.264,9.216,20.48,20.48,20.48h41.472c2.56,0,4.608,2.048,5.12,4.608l31.744,216.064c4.096,27.136,27.648,47.616,55.296,47.616h212.992c26.624,0,49.664-18.944,55.296-45.056l33.28-166.4C457.728,97.71,450.56,86.958,439.296,84.91z" />
                                    <path d="M215.04,389.55c-1.024-28.16-24.576-50.688-52.736-50.688c-29.696,1.536-52.224,26.112-51.2,55.296c1.024,28.16,24.064,50.688,52.224,50.688h1.024C193.536,443.31,216.576,418.734,215.04,389.55z" />
                                            </g>
                                        </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>