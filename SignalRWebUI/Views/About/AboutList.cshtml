@model List<AboutList>
@{
	ViewData["Title"] = "AboutList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Hakkımda İşlemleri</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">Başlık</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/About/AddAbout" class="btn btn-outline-warning">Ekle</a>
		</div>
	</div>
</div>

