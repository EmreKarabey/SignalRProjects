@model List<BookingList>
@{
	ViewData["Title"] = "BookingList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Rezervasyon Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Ad-Soyad</th>
						<th scope="col">Telefon</th>
						<th scope="col">Mail</th>
						<th scope="col">Kişi Sayısı</th>
						<th scope="col">Tarih</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.BookingID</td>
							<td>@item.Name</td>
							<td>@item.Phone</td>
							<td>@item.Mail</td>
							<td>@item.PersonCount</td>
							<td>@item.Date.ToShortDateString() @item.Date.ToShortTimeString()</td>
							<td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/Booking/AddBooking" class="btn btn-outline-warning">Rezervasyon Ekle</a>
		</div>
	</div>
</div>

