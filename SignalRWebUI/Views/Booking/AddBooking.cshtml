@model AddBooking
@{
	ViewData["Title"] = "AddBooking";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form class="form-valide" method="post">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Rezervasyon Ekleme Sayfası</div>
			</div>

			<div class="card-body">

				<div class="form-group">
					<label for="text">Ad-Soyad</label>
					<input type="text" class="form-control" asp-for="Name" placeholder="Ad-Soyad">
				</div>

				<div class="form-group">
					<label for="text">Telefon</label>
					<input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numarası">
				</div>

				<div class="form-group">
					<label for="text">Mail</label>
					<input type="email" class="form-control" asp-for="Mail" placeholder="Mail">
				</div>

				<div class="form-group">
					<label for="text">Kişi Sayısı</label>
					<input type="text" class="form-control" asp-for="PersonCount" placeholder="Kişi Sayısı">
				</div>

				<div class="form-group">
					<label for="text">Tarih</label>
					<input type="date" class="form-control" asp-for="Date" placeholder="Tarih">
				</div>


			</div>
			<div class="card-action">
				<button class="btn btn-success" type="submit">Ekle</button>
				<a class="btn btn-danger" href="/Booking/BookingList">Geri</a>
			</div>
		</div>
	</div>
</form>

