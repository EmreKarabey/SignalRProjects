@model List<SocialMediaList>
@{
	ViewData["Title"] = "SocialMediaList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Hesaplar Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Başlık</th>
						<th scope="col">Url</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.SocialMediaID</td>
							<td>@item.Title</td>
							<td>@item.Url</td>
							<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-warning">Hesap Ekle</a>
		</div>
	</div>
</div>

