@model UpdateSocialMedia
@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Hesap Güncelleme Sayfası</div>
			</div>

			<div class="card-body">
				<input type="hidden" class="form-control" asp-for="SocialMediaID" placeholder="@Model.SocialMediaID">
				<div class="form-group">
					<label for="text">Başlık</label>
					<input type="text" class="form-control" asp-for="Title" placeholder="@Model.SocialMediaID">
				</div>
				<div class="form-group">
					<label for="text">Url</label>
					<input type="text" class="form-control" asp-for="Url" placeholder="@Model.Url">
				</div>
				<div class="form-group">
					<label for="text">İkon</label>
					<input type="text" class="form-control" asp-for="Icon" placeholder="@Model.Icon">
				</div>

			</div>
			<div class="card-action">
				<button class="btn btn-success" type="submit">Güncelle</button>
				<a class="btn btn-danger" href="/SocialMedia/SocialMediaList">Geri</a>
			</div>
		</div>
	</div>
</form>
