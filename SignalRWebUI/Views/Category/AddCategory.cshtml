@model AddCategory
@{
	ViewData["Title"] = "AddCategory";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Kategori Ekleme Sayfası</div>
			</div>

			<div class="card-body">
				<div class="form-group">
					<label for="text">Kategori Adı</label>
					<input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı">
				</div>
			</div>
			<div class="card-action">
				<button class="btn btn-success" type="submit">Ekle</button>
				<a class="btn btn-danger" href="/Category/CategoryList">Geri</a>
			</div>
		</div>
	</div>
</form>
