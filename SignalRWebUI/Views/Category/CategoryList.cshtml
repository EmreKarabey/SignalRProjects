@model List<CategoryList>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Kategori Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Kategori Adı</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.CategoryID</td>
							<td>@item.CategoryName</td>
							@if (item.CategoryStatus == true)
							{
								<td>
									<span class="badge bg-success">Aktif</span>
								</td>
							}
							else
							{
								<td>
									<span class="badge bg-danger">Pasif</span>
								</td>
							}
							<td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/Category/AddCategory" class="btn btn-outline-warning">Kategori Ekle</a>
		</div>
	</div>
</div>

