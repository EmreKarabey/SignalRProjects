@model List<TestimonialList>
@{
	ViewData["Title"] = "TestimonialList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Yorumlar Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Ad-Soyad</th>
						<th scope="col">Başlık</th>
						<th scope="col">Yorum</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.TestimonialID</td>
							<td>@item.Name</td>
							<td>@item.Title</td>
							<td>@item.Comment</td>
							@if (item.Status == true)
							{
								<td>
									<span class="badge bg-success">Yayında</span>
								</td>
							}
							else
							{
								<td>
									<span class="badge bg-danger">Yayında Değil</span>
								</td>
							}
							<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}


				</tbody>
			</table>
		</div>
	</div>
</div>

