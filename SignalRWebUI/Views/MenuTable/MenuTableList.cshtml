
@model List<MenuTableList>
@{
    ViewData["Title"] = "MenuTableList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Masa Tablosu</div>
		</div>
		<div class="card-body">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Masa Adı</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.MenuTableID</td>
							<td>@item.Name</td>
							<td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableID" class="btn btn-outline-primary">Güncelle</a></td>

						</tr>
					}
				</tbody>
			</table>
			<a href="/MenuTable/AddMenuTable" class="btn btn-outline-warning">Masa Ekle</a>
		</div>
	</div>
</div>
