@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Ready Sipariş</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <style>
        body {
            background: #f3f5f9; /* Çok açık gri arka plan */
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); /* Hafif gradient */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border-radius: 15px;
            border: none;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .login-header {
            background: #fff;
            padding: 40px 20px 20px;
            text-align: center;
        }

        .login-body {
            padding: 40px;
            background: #fff;
        }

        .form-control {
            height: 50px;
            padding-left: 20px;
            font-size: 14px;
            border-radius: 50px;
            border: 1px solid #eee;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                border-color: #1572E8;
                box-shadow: none;
                background-color: #fff;
            }

        .btn-login {
            height: 50px;
            border-radius: 50px;
            font-weight: bold;
            font-size: 16px;
            background: #1572E8; /* Logo mavisi */
            border: none;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background: #1261c9;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(21, 114, 232, 0.4);
            }

        .input-icon {
            position: absolute;
            right: 25px;
            top: 15px;
            color: #aaa;
            font-size: 20px;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-header">
            <div style="display: flex; justify-content: center; align-items: center; margin-bottom: 10px;">
                <div style="width: 50px; height: 50px; background-color: #1572E8; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 12px; box-shadow: 0 4px 10px rgba(21, 114, 232, 0.3);">
                    <i class="la la-cutlery" style="font-size: 24px; color: white;"></i>
                </div>
                <div style="text-align: left;">
                    <span style="display: block; font-size: 22px; font-weight: 800; color: #333; line-height: 1;">Ready</span>
                    <span style="display: block; font-size: 16px; font-weight: 500; color: #666;">Sipariş</span>
                </div>
            </div>
            <p class="text-muted mb-0" style="font-size: 14px;">Admin Paneli Giriş</p>
        </div>

        <div class="login-body">
            <form method="post" >

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Email" placeholder="Kullanıcı Email" required autocomplete="off">
                    <i class="la la-user input-icon"></i>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required autocomplete="off">
                    <i class="la la-lock input-icon"></i>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4" style="font-size: 13px;">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck1" asp-for="RememberMe">
                        <label class="custom-control-label text-muted" for="customCheck1">Beni Hatırla</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-login">
                    Giriş Yap
                </button>

                <div class="text-center mt-4">
                    <span class="text-muted" style="font-size: 14px;">Hesabınız yok mu?</span>
                    <a href="/Auth/Register" class="text-primary font-weight-bold ml-1" style="text-decoration: none;">Hesap Oluştur</a>
                </div>

            </form>
        </div>
    </div>

</body>
</html>