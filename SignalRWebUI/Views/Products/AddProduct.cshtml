@model AddProduct
@{
	ViewData["Title"] = "AddProduct";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-valide" method="post" enctype="multipart/form-data">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Ürün Ekleme Sayfası</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="text">Ürün Adı</label>
					<input type="text" class="form-control" asp-for="ProductsName" placeholder="Ürün Adı">
				</div>
				<div class="form-group">
					<label for="text">Açıklama</label>
					<input type="text" class="form-control" asp-for="Description" placeholder="Açıklama">
				</div>
				<div class="form-group">
					<label for="text">Fiyat</label>
					<input type="text" class="form-control" asp-for="Price" placeholder="Ürün Ücret">
				</div>
				<div class="form-group">
					<label for="exampleFormControlSelect1">Kategori</label>
					<select asp-for="CategoryID" class="form-control">
						@await Component.InvokeAsync("_CategoryViewComponents")
					</select>
				</div>

				<div class="form-group">
				<label for="text">Resim</label>
				<input type="file" class="form-control" asp-for="Image">
			</div>
		</div>
		<div class="card-action">
			<button class="btn btn-success" type="submit">Ekle</button>
			<a class="btn btn-danger" href="/Products/ProductsList">Geri</a>
		</div>
	</div>
	</div>
</form>
